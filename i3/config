# moving workspaces
bindsym $mod+Shift+Ctrl+k exec i3-msg move workspace to output up
bindsym $mod+Shift+Ctrl+j exec i3-msg move workspace to output down
bindsym $mod+Shift+Ctrl+h exec i3-msg move workspace to output left
bindsym $mod+Shift+Ctrl+l exec i3-msg move workspace to output right

# gaps
for_window [class=".*"] border pixel 2

gaps inner 10px
gaps outer 5px
smart_gaps on

bindsym $mod+Shift+t		gaps inner current set 10; gaps outer current set 5
bindsym $mod+Shift+f		gaps inner current set 0; gaps outer current set 0
bindsym $mod+g			    gaps inner current plus 5
bindsym $mod+Shift+g		gaps inner current minus 5

# quick resizing
bindsym $mod+Shift+o		resize grow width 2 px or 2 ppt
bindsym $mod+Shift+u		resize shrink height 2 px or 2 ppt
bindsym $mod+Shift+i		resize grow height 2 px or 2 ppt
bindsym $mod+Shift+y		resize shrink width 2 px or 2 ppt

# volume controls
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ +5% && killall -SIGUSR1 i3status
bindsym XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -5% && killall -SIGUSR1 i3status
bindsym XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle && killall -SIGUSR1 i3status

# screen lock
bindsym $mod+Ctrl+l exec /usr/share/goobuntu-desktop-files/xsecurelock.sh

# Caps to Esc
exec_always /usr/local/bin/capslock-to-esc

# US keyboard
exec_always /usr/local/bin/keyboard-us

# wake up connected outputs
bindsym ctrl+shift+4 exec xset dpms force on

# set logitech mouse speed
# `xinput --list` will list all input devices. This assumes that 9 is the Logitech device
exec_always xinput --set-prop 9 300 -0.9

